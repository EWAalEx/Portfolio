<script>
    function properSpacing() {
        let homeSplash = document.querySelector(".home-splash");
        let topSign = document.querySelector(".top-sign");
        let wallSignConnector = document.querySelector(".wall-sign-connector");

        wallSignConnector.style.height = topSign.clientHeight + "px";

        try {
            homeSplash.style.height = "calc(100vh - " + document.querySelector("nav").clientHeight + "px)";
        } catch (error){
            console.log(error)
        }
    };

    document.onload = properSpacing();
    window.onresize = properSpacing;
</script>