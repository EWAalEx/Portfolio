<style>
    .home-splash {
        overflow: hidden;
        background: rgb(23 30 95);
        background-size: cover;
        width: 100%;
        height: calc(100vh - 15vh);
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
    }

    .wall-sign {
        display: flex;
        flex: 1;
        height: 100%;
        flex-direction: row;
        align-items: center;
        justify-content: flex-start;
    }

    .wall-sign-connector {
        display: flex;
        flex-direction: column;
        justify-content: space-around;
        width: 2vw;
        height: 35vh;
        margin-bottom: 24vh;
    }

    .wall-bar {
        width: 100%;
        aspect-ratio: 1/1;
        background: black;
    }

    .wall {
        background: #010212;
        height: 100%;
        flex: 1;
    }

    .sign-whole {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        justify-content: center;
        flex: 2;
        height: -webkit-fill-available;
        padding: 1rem 2rem 1rem 0;
    }

    .top-sign {
        width: 100%;
        aspect-ratio: 1/1.2;
        background: slategrey;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    .sign-logo {
        width: 100%;
        aspect-ratio: inherit;
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;

    }

    .sign-text {
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .sign-connector {
        width: 100%;
        height: 2vh;
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-around;
    }

    .chain {
        height: 100%;
        aspect-ratio: 1/1;
        background: black;
    }

    .sub-sign {
        width: 100%;
        max-height: 10vh;
        background: slategrey;
        background-size: cover;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    .sub-sign h3{
        height: 10vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .splash-right {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        flex: 1.5;
        height: 100%;
    }

    .splash-text-content {
        background: rgba(0,0,0,0.2);
        margin-right: 2rem;
        padding: 2rem;
        border-radius: 2rem;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        color: antiquewhite;
    }
</style>

